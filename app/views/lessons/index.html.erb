<div class="page-header">
  <h1>
    All Vocab Groups
    <a href="/lessons/new" class="btn btn-lg btn-success">New Lesson</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Owner</th>
        <th>Actions</th>
      </tr>

      <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.name %></td>
        <td><%= lesson.owner.username %></td>
        <td>
          <a href="/modules/<%= lesson.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
