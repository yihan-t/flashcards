<div class="page-header">
  <h1>
    <% if @index_all == false %>
      My Vocab
    <% else %>
      All Vocab
    <% end %>
    <a href="/vocabs/new" class="btn btn-lg btn-success">New Vocab</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Module</th>
        <th>Chinese</th>
        <th>English</th>
        <% if @index_all==false %>
          <th>Date created</th>
        <% else %>
          <th>Owner</th>
        <% end %>
        <th>Actions</th>
      </tr>

      <% @vocabs.each do |vocab| %>
      <tr>
        <td><%= vocab.lesson.name %></td>
        <td><%= vocab.chinese %></td>
        <td><%= vocab.english %></td>
        <% if @index_all==false %>
          <td><%= vocab.created_at.to_date %></td>
        <% else %>
          <td><%= vocab.owner.username %> </td>
        <% end %>
        <td>
          <a href="/vocabs/<%= vocab.id %>" class="btn btn-primary">Details</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<% if @index_all==false %>
  <a href="/vocabs/index/all">See vocab created by other users</a>
<% else %>
  <a href="/vocabs/index">See my vocab</a>
<% end %>